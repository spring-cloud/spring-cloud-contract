<!DOCTYPE suppressions PUBLIC
		"-//Puppy Crawl//DTD Suppressions 1.1//EN"
		"https://www.puppycrawl.com/dtds/suppressions_1_1.dtd">
<suppressions>
	<!-- Xeger is repackaged -->
	<suppress files=".*xeger.*" checks=".*"/>
	<suppress files=".*functionalTest.*" checks="(Javadoc*|HideUtility*|LineLengthCheck)"/>
	<suppress files=".*MessagingApplication.*" checks="(Javadoc*|HideUtility*)"/>
	<suppress files=".*AutoConfigureWireMock.*" checks="LineLengthCheck"/>
	<suppress files=".*ConditionalOnStubbedDiscoveryEnabled.*" checks="LineLengthCheck"/>
	<suppress files=".*ConvertMojo.*" checks="LineLengthCheck"/>
	<suppress files=".*LoanApplicationServiceTests.*" checks="LineLengthCheck"/>
	<suppress files=".*MessageSubscriberRabbitListener.*" checks="LineLengthCheck"/>
	<suppress files=".*PluginUnitTest.*" checks="LineLengthCheck"/>
	<suppress files=".*RabbitManager.*" checks="LineLengthCheck"/>
	<suppress files=".*GenerateTestsMojo.*" checks="LineLengthCheck"/>
	<suppress files=".*StubRunnerBoot.*" checks="LineLengthCheck"/>
	<suppress files=".*StubRunnerBoot.*" checks="HideUtilityClassConstructor"/>
	<suppress files=".*StubRunnerBoot.*" checks="FinalClass"/>
	<suppress files=".*StubRunnerMain.*" checks="FinalClass"/>
	<suppress files=".*StubRunnerJUnit5ExtensionCustomMessageVerifierTests.*" checks="RegexpSinglelineJavaCheck"/>
	<suppress files=".*StubRunnerJUnit5ExtensionExceptionThrowingTests.*" checks="RegexpSinglelineJavaCheck"/>
	<suppress files=".*StubRunnerSliceTests.*" checks="LineLengthCheck"/>
	<suppress files=".*WiremockServerApplicationTests.*" checks="LineLengthCheck"/>
	<suppress files=".*ContractVerifierConfigProperties.*" checks="JavadocStyle"/>
	<suppress files=".*YamlContract.*" checks="JavadocVariable"/>
	<suppress files=".*HttpHeaders.*" checks="HideUtility*"/>
	<suppress files=".*HttpMethods.*" checks="(Javadoc*|HideUtility*)"/>
	<suppress files=".*HttpStatus.*" checks="HideUtility*"/>
	<suppress files=".*contractsToCompile.*" checks=".*"/>
	<suppress files=".*RegexPatterns.*" checks="HideUtility*"/>
	<suppress files=".*gradle.*" checks=".*"/>
</suppressions>
